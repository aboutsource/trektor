{
  "manifest_version": 2,
  "name": "Trektor",
  "description": "Browser-Extension zum automatischen Anlegen von Toggl tracking tasks",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://trello.com/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],

  "permissions": [
    "*://api.trello.com/*",
    "*://*.toggl.com/*"
  ],

  "options_ui": {
    "page": "options/index.html"
  }
}
